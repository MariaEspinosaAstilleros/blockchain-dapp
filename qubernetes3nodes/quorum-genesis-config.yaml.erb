<%-
 @Genesis_File = @config["quorum"]["Genesis_File"]
%>

<%- if @Namespace != "" %>
apiVersion: v1
kind: Namespace
metadata:
  name: <%= @config["namespace"]["name"] %>
  labels:
    name: <%= @config["namespace"]["name"] %>
    <%- end %>
---

apiVersion: v1
kind: ConfigMap
metadata:
  name: genesis-config
  <%= @Namespace %>
  labels:
    app: qubernetes
    name: genesis-config
data:
  genesis-geth.json: |-
<%- File.readlines(@Genesis_File).each do |line| -%>
      <%= line -%>
<% end -%>

